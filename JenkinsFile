pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = 'docker-hub-cred'       // Replace with your actual Jenkins DockerHub credential ID 1
        IMAGE_NAME = 'harshrawte/todo-app'              // Your DockerHub repo
        TAG = "latest"                                  // Can be dynamic with env.BUILD_NUMBER or Git commit hash
        CONTAINER_NAME = 'todo-flask-container'
    }

    stages {

        stage('Clone Repository') {
            steps {
                echo 'üîÑ Cloning repo...'
                git branch: 'main', url: 'https://github.com/harshhrawte/To-Do-List.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'üê≥ Building Docker image...'
                sh 'docker build -t $IMAGE_NAME:$TAG .'
            }
        }

        stage('Push to Docker Hub') {
            steps {
                echo 'üì§ Logging in and pushing to DockerHub...'
                withCredentials([usernamePassword(credentialsId: "${DOCKERHUB_CREDENTIALS}", usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    sh '''
                        echo "$PASSWORD" | docker login -u "$USERNAME" --password-stdin
                        docker push $IMAGE_NAME:$TAG
                    '''
                }
            }
        }

        stage('Deploy on Docker Host') {
            steps {
                echo 'üöÄ Deploying container on Docker Host...'
                sh '''
                    docker rm -f $CONTAINER_NAME || true
                    docker run -d -p 5000:5000 --name $CONTAINER_NAME $IMAGE_NAME:$TAG
                '''
            }
        }
    }

    post {
        success {
            echo '‚úÖ Deployment successful!'
        }
        failure {
            echo '‚ùå Something went wrong. Check logs.'
        }
    }
}
